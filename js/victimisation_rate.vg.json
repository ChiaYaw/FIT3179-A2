{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "title": {
    "text": "Victimisation Rate by State/Territory in 2022",
    "fontSize": 22
    },
  "data": {
    "url": "https://raw.githubusercontent.com/ChiaYaw/week-9-homework/refs/heads/main/Australia_map.json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ChiaYaw/week-9-homework/refs/heads/main/Victimisation_Rate.csv"
        },
        "key": "State/Territory",
        "fields": ["Victimisation_Rate", "Year"]
      }
    }
  ],
  "projection": {
    "type": "albers",
    "parallels": [0, 0]
  },
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 1.5},
      "encoding": {
        "color": {
          "field": "Victimisation_Rate",
          "type": "quantitative",
          "scale": {"domain": [0, 5]},
          "legend": {"title": "Victimisation Rate (%)"}
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State/Territory"},
          {"field": "Victimisation_Rate", "type": "quantitative", "title": "Victimisation Rate (%)"}
        ]
      }
    }
  ],
  "config": {
  "style": {
    "cell": {
      "stroke": "transparent"
    }
  }
}
}