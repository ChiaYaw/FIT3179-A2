{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Victimisation Rate by State/Territory",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://github.com/ChiaYaw/week-9-homework/blob/main/map.json",
    "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://github.com/ChiaYaw/week-9-homework/blob/main/Victimisation_Rate.csv"
        },
        "key": "State/Territory",
        "fields": ["Victimisation Rate"] 
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Victimisation Rate",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "Country"},
      {"field": "Adjusted Value"}
    ]
  }
}
